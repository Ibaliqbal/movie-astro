---
import type { HTMLAttributes } from "astro/types";

type Props = {
  href: string;
  activeClass: string;
  customCondition: boolean;
} & HTMLAttributes<"a">;
const {
  customCondition,
  activeClass,
  class: className,
  href,
  ...rest
} = Astro.props;
---

<a href={`${href}`} class:list={[className, customCondition && activeClass]}
  ><slot /></a
>
