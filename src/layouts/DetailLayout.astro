---
import { ViewTransitions } from "astro:transitions";
import Banner from "@/components/Banner.astro";
import { getSession } from "auth-astro/server";
import { checkValidUser } from "@/lib/supabase/function";
import { storedUser } from "@/store";

interface Props {
  title: string;
  description: string;
  poster: string;
  name_transition: string;
  id: string;
}

const session = await getSession(Astro.request);

if (session) {
  const data = await checkValidUser((session.user?.email as string) ?? "");
  storedUser(data.data);
}

const { title, description, poster, name_transition, id } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback="none" />
  </head>
  <body class="bg-black bg-opacity-95 text-white">
    {
      poster === undefined || poster === null ? (
        <div class="w-full aspect-[1/.3] bg-slate-500 bg-opacity-45" />
      ) : (
        <Banner poster={poster} />
      )
    }
    <main
      class="max-w-layout w-full container pb-14"
      transition:name={`${name_transition} ${id} card`}
    >
      <slot />
    </main>
  </body>
</html>
