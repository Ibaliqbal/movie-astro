---
import Layout from "@/layouts/Layout.astro";
import { getDetailMovie } from "@/utils/data";

const { id } = Astro.params;

const data = (await getDetailMovie((id as string) ?? "")) as Detail;
---

<Layout
  title={`Movie ~ ${data.original_title}`}
  description={`Once detail movie with id ${id}`}
  ><h1 transition:name={`movie ${id} title`} class="mt-3 text-lg">
    {data.original_title}
  </h1></Layout
>
