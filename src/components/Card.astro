---
import type { Movie } from "@/types/movie";
import { Image } from "astro:assets";
type Props = Movie;

const { original_title, id, overview, poster_path } = Astro.props;
---

<article class="w-full">
  <a href={`/movie/${id}`}>
    <Image
      src={import.meta.env.PUBLIC_TMDB_IMG_URL + poster_path}
      alt="Poster"
      inferSize
      class="w-full"
      transition:name={`movie ${id} poster`}
    />
    <h1 transition:name={`movie ${id} title`} class="mt-3 text-lg">
      {original_title}
    </h1>
  </a>
</article>
